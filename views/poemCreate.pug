extends layout

block content
  .container#poemManager
    .header
      h2 시 등록하기
    .body
      .form.card
        .input_wrapper
          .input_group
            .title.input
              label 작품명
              input(type="text" name="title")
          .poet_info.textarea
            label 시인 소개
            textarea(name="introPoet")
          .poet_content.textarea
            label 시 내용
            textarea(name="contents")
          .question.textarea
            label 시인의 한마디
            textarea(type="text" name="question")
          .input_group
            .poet_name.input
              label 시인 이름
              input(type="text" name="poetName")
            .book_link.input
              label 시인 개인 페이지
              input(type="text" name="linkToBook")
          .profile_img.input
            label 프로필 사진
            input(type="file" name="picUrlOfPoet")
          .input_group
            .push_date.input
              label 게시 일자
              input(type="date" name="pushDueDate")
            .btn_group.input
              button.submit(type="submit") 저장


